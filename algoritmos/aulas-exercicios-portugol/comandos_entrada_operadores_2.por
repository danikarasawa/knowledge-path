programa {
    
	funcao inicio() {
	    inteiro num1, num2, sum = 0
	    
	    escreva("Vamos somar dois números?", "\n", "Digite o primeiro número: ")
	    leia(num1)
	    escreva("Digite o segundo número: ")
	    leia(num2)
	    
	    sum = num1 + num2
	    
	    escreva("======================", "\n")
	    escreva("A soma de ", num1, " e ", num2, " e ", sum)
	}
}
